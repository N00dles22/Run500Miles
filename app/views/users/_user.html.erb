<li>
  <%= gravatar_for user, :size => 30 %>
  <%= link_to "#{user.fname} #{user.lname}", user %>
  <% if current_user.admin? %>
    <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?",
                                :title => "Delete #{user.fname} #{user.lname}" %>
  <% end %>                            
</li>