	<h3><a href="#">Activity Speeds</a></h3>
	<div align="center">
		<div id='speedlinechart'></div>
		<%= render_chart(@speed_line_chart, 'speedlinechart') %>
	</div>
	
	<h3><a href="#">Average Speed</a></h3>
	<div align="center">
		<strong>
			<div id="divYearWeekMPH" class="radio_ui">
				<input id='rbYearMPH' type='radio' checked='true' name='rbTimeSpan' data-yearweekparams='["divMPHYear", ["divMPHWeek"], "year"]'/><label for="rbYearMPH">Year</label>
				<input id="rbWeekMPH" type="radio" name="rbTimeSpan" data-yearweekparams='["divMPHWeek", ["divMPHYear"], "week"]'/><label for="rbWeekMPH">Week</label>
			</div>
			<div id="avgmph" style="align:center; width:200px; height: 200px;" ></div>
			<div id="divMPHYear" class="radio_ui">
				<input id="rbYearRun" type="radio" name="rbYear" data-walkrunparams='[<%= @average_mph[:year_run] %>, "year"]'/><label for="rbYearRun">Run</label>
				<input id="rbYearWalk" type="radio" name="rbYear" data-walkrunparams='[<%= @average_mph[:year_walk] %>, "year"]'/><label for="rbYearWalk">Walk</label>
				<input id="rbYearOverall" type="radio" name="rbYear" data-walkrunparams='[<%= @average_mph[:year_overall] %>, "year"]'/><label for="rbYearOverall">Overall</label>
			</div>
			<div id="divMPHWeek" style="display:none" class="radio_ui">
				<input id="rbWeekRun" type="radio" name="rbWeek" data-walkrunparams='[<%= @average_mph[:week_run] %>, "week"]'/><label for="rbWeekRun">Run</label>
				<input id="rbWeekWalk" type="radio" name="rbWeek" data-walkrunparams='[<%= @average_mph[:week_walk] %>, "week"]'/><label for="rbWeekWalk">Walk</label>
				<input id="rbWeekOverall" type="radio" name="rbWeek" data-walkrunparams='[<%= @average_mph[:week_overall] %>, "week"]'/><label for="rbWeekOverall">Overall</label>
			</div>
		</strong>
	</div>
	
	<h3><a href="#">Mileage Logged</a></h3>
	<div align="center"">
		<div id='ympchart'></div>
		<%= render_chart(@wdaybreakdown, 'wdaybreakdown') %>
	</div>
	
	<h3><a href="#">Weekday Activity Breakdown</a></h3>
	<div align="center">		
		<div id='wdaybreakdown'> </div>
		<%= render_chart(@mileage_breakdown_year, 'ympchart') %>
	</div>
	
</div>
