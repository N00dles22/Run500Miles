<h1>Edit Activity</h1>

<%= form_for (@activity) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :activity_date, "Date of Activity" %><br />
    <%= date_select(:activity, :activity_date, :default => Date.today,
      :start_year => 2011, :end_year => 2012, :order => [:month, :day, :year]) %>
  </div>
  <div class="field">
    <%= f.label :distance, "Distance" %><br />
    <%=f.text_field :distance %>
  </div>
  <div class="field">
    <%= f.label :hours %><br />
    <%=f.text_field :hours %>
  </div>
  <div class="field">
    <%= f.label :minutes %><br />
    <%=f.text_field :minutes %>
  </div>
  <div class="field">
    <%= f.label :activity_type %><br />
    <%= select(:activity, :activity_type,
                    [['run', 1], ['walk', 2], ['run/walk', 3]])%>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%=f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%=f.text_area :comment, :onkeydown => "textCounter(activity_comment, this.form.txtCharsLeft, 140)",
							:onkeyup => "textCounter(activity_comment, this.form.txtCharsLeft, 140)"%><br />
	Characters Remaining:  <input readonly type="text" name="txtCharsLeft" size=3 maxlength=3 value=<%= 140 - @activity.comment.length %>> 
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

