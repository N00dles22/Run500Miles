
<tr <% if leader_item[:name] == "#{current_user.fname} #{current_user.lname[0,1].upcase}." %>
        class="leaderuser"
      <% end %>>
  <td>
    <%= leader_item_counter + 1 %>
  </td>
  <td class="leadername">
      <%= leader_item[:name] %>
  </td>
  <td>
    <%= leader_item[:distance] %>
  </td>
  <td>
    <%= leader_item[:time] %>
  </td>
</tr>