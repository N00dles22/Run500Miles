<div class="user_info">
  <a href="<%= user_path(object) %>">
    <%= gravatar_for object, :size => 30 %>
    <strong><%= "#{object.fname} #{object.lname}" %></strong><br />    
  </a>
  <br />
  <br />
  <!--<strong>URL</strong>  <%= link_to user_path(object), object %><br />-->
  <strong>Runs Logged</strong> <%= object.activities.count %>
  <br />
  <br />
    <strong>Total for Year</strong><br />
    <span class="activities">
      <%= pluralize(object.total_miles("year"), "mile") %> in<br /> 
      <%= total_time_s(object, "year") %>
    </span>
    <br />
    <br />
    <strong>Total this Week</strong><br />
    <span class="activities">
      <%= pluralize(object.total_miles("week"), "mile") %> in <br />
      <%= total_time_s(object, "week") %>
    </span>
    <br />
    <br />
    <strong>Mileage Remaining</strong><br />
    <span class="activities">
      <%= pluralize(object.miles_left("year"), "mile") %> left this <strong>year</strong><br /> 
      <%= pluralize(object.miles_left("week"), "mile") %> left this <strong>week</strong>
    </span>
    <br />
    <% if current_user.admin? %>
      <strong>User Type</strong><br />
      <%= object.user_type %>
	  <br />
	  <strong>Privileges</strong><br />
	  <%= object.admin? ? "Administrator" : "Regular User" %>
    <% end %>
  </div>
