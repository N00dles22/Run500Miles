<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= "#{current_user.fname} #{current_user.lname}" %>
    </span><br />
    <span class="activities">
      <%= pluralize(current_user.activities.count, "activity") %><br />
      
    </span>
    <span class="">Totals</span><br />
    <span class="activities">
      <%= pluralize(total_miles(current_user, "year"), "mile") %> in 
      <%= pluralize(total_time(current_user, "year"), "hour") %><br />
      
    </span>
    <span class="">This Week</span><br />
    <span class="activities">
      <%= pluralize(total_miles(current_user, "week"), "mile") %> in 
      <%= pluralize(total_time(current_user, "week"), "hour") %><br />
    </span>
    <span class="">Mileage Remaining</span><br />
    <span class="activities">
      <%= pluralize(miles_left(current_user, "year"), "mile") %><br /> 
      <%= pluralize(miles_left(current_user, "week"), "mile") %>
    </span>
  </a>
</div>
