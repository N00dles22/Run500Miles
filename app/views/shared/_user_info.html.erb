<div class="user_info">
  <a href="<%= user_path(object) %>">
    <%= gravatar_for object, :size => 30 %>
    <strong><%= "#{object.fname} #{object.lname}" %></strong><br />    
  </a>
  <br />
  <strong>Runs Logged</strong> <%= object.activities.count %>
  <br />
  <br />
    <strong>This Week</strong><br />
    <span class="activities">
      <%= pluralize(object.total_miles("week"), "mile") %> in
      <%= total_time_s(object, "week") %>
    </span>
	<span>
	<%= Utilities::UI.progress_bar(object.total_miles("week"), :bar_max => 10, :width => 200, :height => 15) %>
    </span>
	<span class="activities"><div align="right"><%= pluralize(object.miles_left("week"), "mile") %> left</div></span>
    <strong>The Year</strong><br />
    <span class="activities">
      <%= pluralize(object.total_miles("year"), "mile") %> in
      <%= total_time_s(object, "year") %>
    </span>
	<span>
	<%= Utilities::UI.progress_bar(object.total_miles("year"), :bar_max => 500, :width => 200, :height => 15) %>
    </span>
	<span class="activities"><div align="right"><%= pluralize(object.miles_left("year"), "mile") %> left</div></span>
	<br />
    <!--<strong>Mileage Remaining</strong><br />
    <span class="activities">
	
      < pluralize(object.miles_left("year"), "mile") %> left this <strong>year</strong><br /> 
      < pluralize(object.miles_left("week"), "mile") %> left this <strong>week</strong>
    </span>
    <br />-->
    <% if current_user.admin? %>
      <strong>User Type</strong><br />
      <%= object.user_type %>
	  <br />
	  <strong>Privileges</strong><br />
	  <%= object.admin? ? "Administrator" : "Regular User" %>
    <% end %>
  </div>
