<% if signed_in? %>
<!--Display personal stats-->
<h3 align="center">
  You have gone
  <%= pluralize(current_user.total_miles("week"), "mile") %>
  this week and have
  <%= pluralize(current_user.miles_left("week"), "mile") %>
  to go!
</h3>
<br />
<%= link_to "Log a run!", new_activity_path, :class => "log_run_button round" %>

<table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info', :object => current_user %>
      </td>
    </tr>
  </table>
  <% else %>
    <h1>Run 500 Miles</h1>
<p>
  This is the home page for the
  Run 500 Miles application.
</p>
<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>