<h1>Edit Quote of the Week</h1>

<%= form_for(:qotw, :url => update_quote_path) do |f| %>
  <div class="field">
    <%= f.label :quote %><br />
    <%= f.text_area :quote, :autofocus => true, :value => qotw[:content] %>
  </div>
  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_field :source, :value => qotw[:source] %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>